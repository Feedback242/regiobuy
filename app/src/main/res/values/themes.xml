<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RegioBuy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#29B6F6</item>
        <item name="colorPrimaryVariant">#03A9F4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#29B6F6</item>
        <item name="colorSecondaryVariant">#03A9F4</item>
        <item name="colorOnSecondary">#191919</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#2C2C2C</item>
        <item name="android:textColorHighlight">#000000</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:toolbarStyle">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.RegioBuy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
